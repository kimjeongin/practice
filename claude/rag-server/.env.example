# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./data/rag.db

# Vector Database Configuration
CHROMA_SERVER_URL=http://localhost:8000
CHROMA_COLLECTION_NAME=rag_documents

# Data Directory
DATA_DIR=./data

# Embedding Configuration
# OpenAI (optional - for better embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace (for local embeddings)
HUGGINGFACE_MODEL=BAAI/bge-small-en-v1.5
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# RAG Configuration
CHUNK_SIZE=1024
CHUNK_OVERLAP=20
SIMILARITY_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# Embedding Service
EMBEDDING_SERVICE=openai  # Options: openai, huggingface, local
EMBEDDING_BATCH_SIZE=100
EMBEDDING_DIMENSIONS=1536  # OpenAI: 1536, BGE-small: 384

# Performance
MAX_CONCURRENT_EMBEDDINGS=5
EMBEDDING_CACHE_SIZE=1000

# Logging
LOG_LEVEL=info