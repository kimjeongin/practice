{
  "name": "rag-mcp-server",
  "version": "1.0.0",
  "description": "Local RAG MCP server with LangChain, FAISS vector search, Ollama embeddings, and SQLite",
  "main": "dist/app/index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "yarn clean && tsc && tsc-alias -p tsconfig-alias.json",
    "build:fast": "tsc && tsc-alias -p tsconfig-alias.json",
    "start": "node dist/app/index.js",
    "dev": "yarn db:setup && tsx watch src/app/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "yarn db:setup && yarn build && jest",
    "test:unit": "yarn db:setup && yarn build && jest tests/unit",
    "test:integration": "yarn db:setup && yarn build && jest tests/integration",
    "test:e2e": "yarn db:setup && yarn build && jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:e2e",
    "build:executable": "yarn build && yarn bundle:all",
    "bundle:all": "yarn bundle:linux && yarn bundle:macos && yarn bundle:windows",
    "bundle:linux": "node deploy/scripts/build-executable.js linux",
    "bundle:macos": "node deploy/scripts/build-executable.js darwin",
    "bundle:windows": "node deploy/scripts/build-executable.js win32",
    "release:build": "yarn build:executable",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:setup": "./scripts/setup-database.sh",
    "db:reset": "./scripts/reset-database.sh",
    "setup": "./scripts/setup-dev.sh",
    "postinstall": "prisma generate"
  },
  "packageManager": "yarn@1.22.19",
  "keywords": [
    "mcp",
    "rag",
    "langchain",
    "faiss",
    "ollama",
    "vector-search",
    "local-ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@huggingface/transformers": "^3.7.2",
    "@langchain/community": "^0.3.53",
    "@langchain/core": "^0.3.70",
    "@langchain/textsplitters": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@prisma/client": "6.12.0",
    "chokidar": "^4.0.3",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.1",
    "faiss-node": "^0.5.1",
    "fastify": "^5.5.0",
    "langchain": "^0.3.31",
    "mammoth": "^1.10.0",
    "node-fetch": "^3.3.2",
    "onnxruntime-common": "^1.22.0",
    "onnxruntime-node": "1.22.0-rev",
    "opossum": "^9.0.0",
    "p-retry": "^6.2.1",
    "p-timeout": "^6.1.4",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "prisma": "6.12.0",
    "unpdf": "^1.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "pkg": "^5.8.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
