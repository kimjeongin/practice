{
  "name": "rag-mcp-server",
  "version": "1.0.0",
  "description": "Local RAG MCP server with LangChain, FAISS vector search, Ollama embeddings, and SQLite",
  "main": "dist/app/index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "npm run clean && tsc && tsc-alias -p tsconfig-alias.json",
    "build:fast": "tsc && tsc-alias -p tsconfig-alias.json",
    "start": "node dist/app/index.js",
    "dev": "tsx watch src/app/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "npm run build && jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:e2e": "jest test/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "build:executable": "npm run build && npm run bundle:all",
    "bundle:all": "npm run bundle:linux && npm run bundle:macos && npm run bundle:windows",
    "bundle:linux": "node deploy/scripts/build-executable.js linux",
    "bundle:macos": "node deploy/scripts/build-executable.js darwin",
    "bundle:windows": "node deploy/scripts/build-executable.js win32",
    "package:all": "npm run package:linux && npm run package:macos && npm run package:windows",
    "package:linux": "node deploy/packaging/linux.js",
    "package:macos": "node deploy/packaging/macos.js",
    "package:windows": "node deploy/packaging/windows.js",
    "release:build": "npm run build:executable && npm run package:all"
  },
  "packageManager": "pnpm@9.0.0",
  "keywords": [
    "mcp",
    "rag",
    "langchain",
    "faiss",
    "ollama",
    "vector-search",
    "local-ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@huggingface/transformers": "^3.0.2",
    "@langchain/community": "^0.3.22",
    "@langchain/core": "^0.3.24",
    "@langchain/textsplitters": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "better-sqlite3": "^11.6.0",
    "chokidar": "^4.0.1",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.7",
    "faiss-node": "^0.5.1",
    "langchain": "^0.3.6",
    "mammoth": "^1.10.0",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.3.2",
    "onnxruntime-common": "^1.22.0",
    "onnxruntime-node": "1.22.0-rev",
    "opossum": "^9.0.0",
    "p-retry": "^6.2.1",
    "p-timeout": "^6.1.4",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "unpdf": "^1.1.0",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^30.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.10.2",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "caxa": "^3.0.1",
    "create-dmg": "^6.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.16.0",
    "fpm": "^0.4.3",
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}