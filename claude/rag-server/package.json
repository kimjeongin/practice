{
  "name": "rag-mcp-server",
  "version": "1.0.0",
  "description": "Local RAG MCP server with LangChain, LanceDB vector search, Ollama embeddings, and database storage",
  "main": "dist/app/index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "yarn clean && tsc && tsc-alias -p tsconfig-alias.json",
    "start": "node  dist/app/index.js",
    "dev": "yarn db:setup && tsx watch src/app/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts"
  },
  "packageManager": "yarn@1.22.19",
  "keywords": [
    "mcp",
    "rag",
    "langchain",
    "lancedb",
    "ollama",
    "vector-search",
    "local-ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@lancedb/lancedb": "^0.22.0",
    "@langchain/core": "^0.3.77",
    "@langchain/textsplitters": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.18.1",
    "apache-arrow": "^18.1.0",
    "chokidar": "^4.0.3",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "glob": "^11.0.0",
    "mammoth": "^1.10.0",
    "node-fetch": "^3.3.2",
    "p-timeout": "^6.1.4",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "unpdf": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.17.1",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22"
  }
}
