{
  "name": "rag-mcp-server",
  "version": "1.0.0",
  "description": "Local RAG MCP server with LangChain, LanceDB vector search, Ollama embeddings, and database storage",
  "main": "dist/app/index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "yarn clean && tsc && tsc-alias -p tsconfig-alias.json",
    "build:fast": "tsc && tsc-alias -p tsconfig-alias.json",
    "start": "node  dist/app/index.js",
    "dev": "yarn db:setup && tsx watch src/app/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "build:executable": "yarn build && yarn bundle:all",
    "bundle:all": "yarn bundle:linux && yarn bundle:macos && yarn bundle:windows",
    "bundle:linux": "node deploy/scripts/build-executable.js linux",
    "bundle:macos": "node deploy/scripts/build-executable.js darwin",
    "bundle:windows": "node deploy/scripts/build-executable.js win32",
    "release:build": "yarn build:executable",
    "db:setup": "./scripts/setup-database.sh",
    "db:reset": "./scripts/reset-database.sh",
    "setup": "./scripts/setup-dev.sh"
  },
  "packageManager": "yarn@1.22.19",
  "keywords": [
    "mcp",
    "rag",
    "langchain",
    "lancedb",
    "ollama",
    "vector-search",
    "local-ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@lancedb/lancedb": "^0.21.3",
    "@langchain/community": "^0.3.53",
    "@langchain/core": "^0.3.70",
    "@langchain/textsplitters": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "apache-arrow": "^21.0.0",
    "chokidar": "^4.0.3",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.1",
    "es-hangul": "^2.3.5",
    "fastify": "^5.5.0",
    "langchain": "^0.3.31",
    "mammoth": "^1.10.0",
    "node-fetch": "^3.3.2",
    "opossum": "^9.0.0",
    "p-retry": "^6.2.1",
    "p-timeout": "^6.1.4",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "unpdf": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/opossum": "^8.1.9",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "pkg": "^5.8.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
