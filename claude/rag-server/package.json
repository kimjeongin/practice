{
  "name": "rag-mcp-server",
  "version": "1.0.0",
  "description": "RAG-enabled MCP server with TypeScript, Fastify, and LlamaIndex",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp-index.js",
    "dev": "tsx watch src/index.ts",
    "dev:mcp": "tsx watch src/mcp-index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "packageManager": "pnpm@9.0.0",
  "keywords": [
    "mcp",
    "rag",
    "llamaindex",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "fastify": "^5.1.0",
    "better-sqlite3": "^11.6.0",
    "chokidar": "^4.0.1",
    "dotenv": "^16.4.7",
    "mime-types": "^2.1.35",
    "uuid": "^11.0.3",
    "zod": "^3.24.1",
    "openai": "^4.0.0",
    "@modelcontextprotocol/sdk": "^1.17.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^29.5.14",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}